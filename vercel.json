{
  "version": 2,
  "installCommand": "npm install && (test -d backend && npm install --prefix backend || true)",
  "builds": [
    {
      "src": "backend/app.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "backend/app.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/app.js"
    }
  ]
}
